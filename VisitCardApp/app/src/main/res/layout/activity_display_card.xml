<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@mipmap/visit_card_bckgrd">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout1">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:id="@+id/button_create_1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/textView1"
            android:text="Name"
            android:layout_marginStart="80dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/textView2"
            android:text="Surname"
            android:layout_weight="0.34" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/textView3"
        android:text="Job"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="150dp" />

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="49dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/qr_placement"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3">
    </FrameLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_below="@id/qr_placement">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/textView4"
            android:text="Phone : \n XXXXXXXXXX"
            android:layout_marginTop="100dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="0.5"
            android:id="@+id/linearLayout3"
            android:orientation="vertical"
            android:layout_below="@id/qr_placement"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:id="@+id/textView5"
                android:text="Mail adress : \n XXXX@XXXX.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingTop="10dp"
                android:id="@+id/textView6"
                android:text="Website : XXXX@XXXX.fr"
                android:layout_below="@id/textView5" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>